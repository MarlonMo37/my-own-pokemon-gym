<% if flash[:error] %>
    <div class="errors flash fatal">
        <h4 class="error"><%= flash[:error] %></h4>
    </div>
<% end %>
<center>
    <h1>Signup</h1>
</center>    

<div class="container">
    <form method="post" action="/signup">
        <div class="mb-3">
            <label for="username class="from-lable">Username</label>
            <input type="text" name="user[username]" id="username" class="form-control" required>
            <div id="usernameHelpBlock" class="form-text">
                Your username must be at least 5 characters long
            </div>
        </div>
    
        <div class="mb-3">
            <label for="email" class="from-lable">Email</label>
            <input type="email" name="user[email]" id="email" class="form-control" required>
        </div>
        <div class="row">  
            <div class="col">
                <label for="password" class="from-lable">Password</label>
                <input type="password" name="user[password]" id="password" class="form-control" required>
            </div>
            <div id="passwordHelpBlock" class="form-text">
                Your password must be at least 10 characters long
            </div>
            <br></br>
            <div class="col">
                <label for="password-confirmation" class="from-lable">Password Confirmation</label>
                <input type="password" name="user[password_confirmation]" id="password-confirmation" class="form-control" required>
            </div>
        </div>
        <br></br>
        <input type="submit" class="btn btn-primary" value="Submit">
    </form>
</div>